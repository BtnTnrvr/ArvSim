                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness=".5" Margin="-6,-3">
                                        <TextBlock Text="{Binding MED}" Margin="5" Width="50"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="EVENTTYPE">
