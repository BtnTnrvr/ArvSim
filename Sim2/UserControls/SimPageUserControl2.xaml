                                        <TextBlock Text="{Binding REGION}" Margin="5" Width="50"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="REGION2">
