                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness=".5" Margin="-6,-3">
                                        <TextBlock Text="{Binding REGION2}" Margin="5" Width="50"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
